generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String         @id @default(cuid())
  username                String         @unique
  email                   String         @unique
  password                String
  continent               Continent
  countryCode             String
  totalPositionsPurchased Int            @default(0)
  currentContinentRank    Int            @default(0)
  currentGlobalRank       Int            @default(0)
  createdAt               DateTime       @default(now())
  updatedAt               DateTime       @updatedAt
  transactions            Transaction[]
  notifications           Notification[]

  @@index([continent, totalPositionsPurchased])
  @@index([totalPositionsPurchased])
}

model Transaction {
  id                 String            @id @default(cuid())
  userId             String
  amountUsd          Float
  positionsPurchased Int
  timestamp          DateTime          @default(now())
  paymentStatus      TransactionStatus @default(COMPLETED)
  user               User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Notification {
  id         String   @id @default(cuid())
  userId     String
  message    String
  readStatus Boolean  @default(false)
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, readStatus])
}

enum Continent {
  AFRICA
  ASIA
  EUROPE
  NORTH_AMERICA
  SOUTH_AMERICA
  OCEANIA
  ANTARCTICA
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
}
